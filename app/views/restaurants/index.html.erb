<div class="restaurant-banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1533777857889-4be7c70b33f7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80)">
  <div class="container">
    <h2>RESTAURANTS</h2>
  </div>
</div>
<div class="restaurant-wrapper">
  <div class="restaurant-container">
    <% @restaurants.each do |restaurant|  %>
    <%= render 'shared/cards', restaurant: restaurant%>
    <%end  %>
  </div>
  <div
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>




